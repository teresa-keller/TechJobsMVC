<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    <table>
        <tr>
            @foreach (var job in ViewBag.tableChoices)
            {
                //@if (@job.Value == "null")
                {
            <td>
                <ul>
                   
                    
                    <li>
                        <a asp-controller="Search" asp-action="Results" asp-route-column="@job.Key" asp-route-value="@job">View All</a>

                    </li>
                    
                </ul>
            </td>
                }
            }
        </tr>
    </table>
   
</div>